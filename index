  <script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const responseText = document.getElementById("responseText");
    const heartsContainer = document.getElementById("heartsContainer");

    let noClickCount = 0;

    // Make "No" button run away on hover
    noBtn.addEventListener("mouseover", () => {
      const x = Math.random() * 60 - 30;
      const y = Math.random() * 60 - 30;
      noBtn.style.transform = `translate(${x}px, ${y}px)`;
    });

    // Handle "No" button clicks with escalating drama
    noBtn.addEventListener("click", () => {
      noClickCount++;

      const messages = [
        "Are you sure? ğŸ˜³",
        "Likeâ€¦ REALLY sure? ğŸ˜­",
        "Wow. That hurt. ğŸ’”",
        "Okay fineâ€¦ be like that ğŸ˜¢",
        "You know what? I'm leaving. Bye. ğŸ‘‹"
      ];

      if (noClickCount <= messages.length) {
        alert(messages[noClickCount - 1]);
      }

      if (noClickCount >= messages.length) {
        noBtn.style.display = "none"; // No button disappears
      }
    });

    // Handle "Yes" button click
    yesBtn.addEventListener("click", () => {
      responseText.innerHTML = `
        <p><strong>Yay! ğŸ’–</strong></p>
